<%include header%>
<%include nav%>
<div class="container">
	<br>
	<div class="card card-body col-md-6 mx-auto ">
		<h5 class="text-center">
			<strong>Register</strong>
		</h5>
		<br>
		<form action="" method="post">
			<label for="email">Enter your email</label>
			<input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required="true">
			<br>
			<label for="username">Choose a username</label>
			<input type="text" name="username" id="username" class="form-control" placeholder="Choose a username" required="true">
			<br>
			<label for="password">Choose a strong password</label>
			<input type="password" name="password" id="password" class="form-control" placeholder="Choose a strong password" required="true">
			<br>
			<label for="type">Sign up as a </label>
			<select name="type" id="type" class="form-control">
				<option value="student">Student</option>
				<option value="organizer">Event Organizer</option>
			</select>
			<br>
			<input type="submit" value="Register" class="btn btn-success btn-sm btn-block">
		</form>
		<br>
		Already a member?
		<a href="/login" class="btn btn-sm btn-info">Login Now</a>
	</div>
</div>
<script>
$.backstretch('/images/event.jpg')
</script>
<%include footer%>